{
    "name": "dualshock-calibration-gui",
    "version": "1.0.0",
    "description": "Web-based calibration tool for PlayStation DualShock controllers",
    "main": "core.js",
    "type": "module",
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "build": "node build/build.js",
        "build:dev": "node build/build.js --dev",
        "build:no-lint": "node build/build.js --skip-lint",
        "build:ultra": "node build/build.js --ultra",
        "analyze": "node build/analyze.js",
        "clean": "rimraf dist",
        "serve": "http-server dist -p 8080 -c-1",
        "dev": "npm run build:dev && npm run serve",
        "deploy": "npm run build && node build/deploy.js"
    },
    "keywords": [
        "dualshock",
        "controller",
        "calibration",
        "webHID"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "esbuild": "^0.19.0",
        "eslint": "^8.57.0",
        "html-minifier-terser": "^7.2.0",
        "clean-css": "^5.3.2",
        "terser": "^5.24.0",
        "rimraf": "^5.0.5",
        "http-server": "^14.1.1",
        "fs-extra": "^11.1.1"
    }
}